{
    "name": "kasaikou",
    "dockerComposeFile": "./compose.yml",
    "service": "dev",
    "workspaceFolder": "/workspace",
    "postCreateCommand": "sh /workspace/github.com/kasaikou/kasaikou/.devcontainer/postCreateCommand.sh",
    "customizations": {
        "vscode": {
            "extensions": [
                "eamodio.gitlens",
                "mhutchie.git-graph",
                "chrisdias.vscode-opennewinstance",
                "redhat.vscode-yaml",
                "EditorConfig.EditorConfig"
            ],
            "settings": {
                "git.enableCommitSigning": true,
                "yaml.schemas": {
                    "https://taskfile.dev/schema.json": [
                        "**/Taskfile.yml",
                        "**/taskfile.yml",
                        "**/Taskfile.yaml",
                        "**/taskfile.yaml"
                    ]
                }
            }
        }
    }
}